    admin_html = os.path.join(FRONTEND_DIR, "admin", "index.html")
    if os.path.exists(admin_html):
        return FileResponse(admin_html, media_type="text/html")
    return HTMLResponse(content="Admin page not found", status_code=404)

@app.get("/")
async def root():
