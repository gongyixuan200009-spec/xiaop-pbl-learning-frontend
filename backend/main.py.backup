# 前端页面路由
@app.get("/chat")
@app.get("/chat/")
async def serve_chat():
    """服务chat页面"""
    chat_html = os.path.join(FRONTEND_DIR, "chat", "index.html")
    if os.path.exists(chat_html):
        return FileResponse(chat_html, media_type="text/html")
    return HTMLResponse(content="Chat page not found", status_code=404)

